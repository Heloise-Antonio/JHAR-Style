<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Meu Carrinho</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
</head>
<body class="bg-white min-vw-100">

    <div class="container d-flex flex-column justify-content-center align-items-center min-vw-100 p-5">

        <!-- Título -->
        <h6 class="fw-semibold mb-2">Meu Carrinho</h6>
        <hr class="mb-4">

        <!-- Carrinho vazio -->
        <div class="text-center mb-5">
            <i class="bi bi-cart-x fs-1 text-secondary"></i>
            <p class="mt-2 mb-3 fw-semibold text-secondary">Seu Carrinho Está Vazio</p>
            <a href="#" class="btn btn-danger px-4">Escolher Novos Produtos</a>
        </div>

        <!-- Faixa de informações -->
        <div class="row text-center bg-danger bg-opacity-25 py-4 mb-4 min-vw-100">
            <div class="col-md-4 mb-3 mb-md-0">
                <h6 class="fw-bold">ACEITAMOS</h6>
                <div class="fs-3">
                    <i class="bi bi-credit-card-2-front"></i>
                    <i class="bi bi-visa mx-1"></i>
                    <i class="bi bi-credit-card"></i>
                    <i class="bi bi-upc"></i>
                </div>
            </div>

            <div class="col-md-4 mb-3 mb-md-0">
                <h6 class="fw-bold">FIQUE POR DENTRO DAS NOVIDADES</h6>
                <div class="fs-3 mb-2">
                    <i class="bi bi-facebook mx-1"></i>
                    <i class="bi bi-instagram mx-1"></i>
                    <i class="bi bi-whatsapp mx-1"></i>
                    <i class="bi bi-twitter-x mx-1"></i>
                </div>
                <p class="mb-1">Nosso site está disponível para</p>
                <div class="fs-3">
                    <i class="bi bi-phone mx-1"></i>
                    <i class="bi bi-laptop mx-1"></i>
                </div>
            </div>

            <div class="col-md-4">
                <h6 class="fw-bold">ENTREGA EXPRESSA</h6>
                <div class="fs-3">
                    <i class="bi bi-truck"></i>
                </div>
            </div>
        </div>

        <!-- Botão voltar -->
        <div class="text-center">
            <a asp-controller="Home" asp-action="Index" class="btn btn-secondary px-4">Voltar</a>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
