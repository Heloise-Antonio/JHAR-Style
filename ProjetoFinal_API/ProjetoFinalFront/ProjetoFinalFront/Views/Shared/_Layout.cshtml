<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ProjetoFinalFront</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ProjetoFinalFront.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />
</head>
<body>
    <header>
        <!-- Top bar com logo, busca e ícones -->
        <div class="container-fluid py-2 bg-white border-bottom">
            <div class="d-flex align-items-center justify-content-between">
                <!-- Logo -->
                <div class="d-flex align-items-center">
                    <img src="~/img/logo.png" alt="Jhar Style" style="height:40px;" class="me-2">
                    <div class="fw-bold text-uppercase">
                        JHAR <span class="text-danger">STYLE</span><br />
                        <small class="text-muted">Estilo que acompanha seu ritmo</small>
                    </div>
                </div>

                <!-- Barra de busca -->
                <div class="flex-grow-1 mx-4">
                    <form class="d-flex">
                        <div class="input-group">
                            <input class="form-control border-danger" type="search" placeholder="Buscar..." aria-label="Search">
                            <button class="btn btn-danger" type="submit"><i class="bi bi-search text-white"></i></button>
                        </div>
                    </form>
                </div>

                <!-- Ícones de usuário, carrinho e pedidos -->
                <div class="d-flex align-items-center">
                    <div>
                        <a asp-controller="Home" asp-action="Perfil" class="text-dark me-3"><i class="bi bi-person fs-4"></i></a>
                        <a asp-action="Register" asp-controller="Home">Registre-se</a>
                        <a asp-action="Login" asp-controller="Home">Login</a>
                    </div>
                   
                    <a asp-controller="Home" asp-action="Carrinho" class="text-dark me-3"><i class="bi bi-cart fs-4"></i></a>
                    <a href="#" class="text-dark"><i class="bi bi-arrow-clockwise fs-4"></i></a>
                </div>
            </div>
        </div>

        <!-- Menu inferior vermelho -->
        <nav class="navbar navbar-expand-sm navbar-dark" style="background-color:#a30000;">
            <div class="container justify-content-center">
                <ul class="navbar-nav">
                    <li class="nav-item px-3"><a class="nav-link text-white fw-semibold" asp-action="ProdutosAcademia" asp-controller="Home">Academia</a></li>
                    <li class="nav-item px-3"><a class="nav-link text-white fw-semibold" href="#">Beach Tennis</a></li>
                    <li class="nav-item px-3"><a class="nav-link text-white fw-semibold" href="#">Futebol</a></li>
                    <li class="nav-item px-3"><a class="nav-link text-white fw-semibold" href="#">Corrida</a></li>
                    <li class="nav-item px-3"><a class="nav-link text-white fw-semibold" href="#">Natação</a></li>
                </ul>
            </div>
        </nav>
    </header>

    <div class="container m-0 p-0">
        <main role="main" class="d-flex flex-column w-100">
            @RenderBody()
        </main>
    </div>

    @* <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - ProjetoFinalFront - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer> *@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
